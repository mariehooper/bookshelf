{
  "private": true,
  "name": "bookshelf",
  "version": "0.0.0",
  "homepage": "https://github.com/mariehooper/bookshelf#readme",
  "description": "Keep a list of all the books you own!",
  "bugs": {
    "url": "https://github.com/mariehooper/bookshelf/issues"
  },
  "author": "Marie Hooper <marie.ashtari@gmail.com> (https://mariehooper.me)",
  "repository": {
    "type": "git",
    "url": "https://github.com/mariehooper/bookshelf.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.production.js",
    "check:css": "stylelint '**/*.js'",
    "check:format": "prettier --list-different '**/*.{css,html,js,json,md}'",
    "check:js": "eslint '**/*.js'",
    "ci": "run-p --aggregate-output --continue-on-error check:* && run-s build",
    "format": "prettier --write '**/*.{css,html,js,json,md}'",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.development.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@emotion/core": "^10.0.7",
    "@reach/router": "^1.2.1",
    "axios": "^0.18.0",
    "firebase": "^5.8.4",
    "idx": "^2.5.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "uniqid": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@emotion/babel-preset-css-prop": "^10.0.7",
    "@svgr/webpack": "^4.1.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-idx": "^2.4.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.3.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "ip": "^1.1.5",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-order": "^2.0.0",
    "stylelint-processor-styled-components": "^1.5.2",
    "terser-webpack-plugin": "^1.2.3",
    "thread-loader": "^2.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "browserslist": [
    "last 3 Chrome versions",
    "last 3 ChromeAndroid versions",
    "last 3 Edge versions",
    "last 3 Firefox versions",
    "last 3 FirefoxAndroid versions",
    "Firefox ESR",
    "last 3 Opera versions",
    "last 3 OperaMobile versions",
    "last 3 Safari versions",
    "last 3 iOS versions",
    "not dead"
  ],
  "babel": {
    "presets": [
      "./config/babel.js"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "compat",
      "react-hooks"
    ],
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "compat/compat": "error",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "react-hooks/rules-of-hooks": "error"
    },
    "overrides": [
      {
        "files": [
          "config/**/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,html,js,json,md}": [
      "prettier --write",
      "git add ."
    ],
    "**/*.js": [
      "eslint",
      "stylelint"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "rules": {
      "max-nesting-depth": [
        3,
        {
          "ignoreAtRules": [
            "media"
          ]
        }
      ],
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "declarations",
        "at-rules",
        "rules"
      ],
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "css-appearance",
            "css-gradients",
            "text-size-adjust",
            "object-fit"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  }
}
